<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.font.MFXFontIcon?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="rootPane" stylesheets="@../../style/jdkmanager.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.anandhuarjunan.workspacetool.views.jdk.JdkManagerPresenter">
   <center>
      <MFXScrollPane fx:id="contentPane" fitToWidth="true" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="20.0" />
         </padding>
      </MFXScrollPane>
   </center>
   <top>
      <VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" spacing="5.0" styleClass="commonheader" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="headerBlock" alignment="CENTER_LEFT" spacing="25.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <ToggleButton fx:id="installedJdk" mnemonicParsing="false" selected="true" text="Installed JDK">
                           <graphic>
                              <MFXFontIcon description="mfx-square-list" size="15.0" />
                           </graphic>
                           <styleClass>
                              <String fx:value="toggleButtons" />
                              <String fx:value="mediamLabel" />
                           </styleClass>
                        </ToggleButton>
                        <ToggleButton fx:id="download" minWidth="200.0" mnemonicParsing="false" text="Download and Install">
                           <styleClass>
                              <String fx:value="toggleButtons" />
                              <String fx:value="mediamLabel" />
                           </styleClass>
                           <graphic>
                              <MFXFontIcon description="mfx-plus" size="15.0" />
                           </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="settings" mnemonicParsing="false" text="Settings">
                           <styleClass>
                              <String fx:value="toggleButtons" />
                              <String fx:value="mediamLabel" />
                           </styleClass>
                           <graphic>
                              <MFXFontIcon description="mfx-sliders" size="15.0" />
                           </graphic>
                        </ToggleButton>
                     </children>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </VBox>
                  <Separator orientation="VERTICAL" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
</BorderPane>
