            <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </StackPane>
         </children>
      </VBox>
   </center>
