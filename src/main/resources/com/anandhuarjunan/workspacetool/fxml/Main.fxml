                  <MFXFontIcon description="mfx-logo" size="52.0" />
               </graphic>
            </Label>
            <Label styleClass="menu-label" text="Components">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Label>
            <MFXScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="navBar" spacing="5.0" styleClass="navbar" />
               </content>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </MFXScrollPane>
         </children>
         <BorderPane.margin>
