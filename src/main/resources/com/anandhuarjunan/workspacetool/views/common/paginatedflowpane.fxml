<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.font.MFXFontIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="720.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.anandhuarjunan.workspacetool.views.common.PaginatedFlowPanePresenter">
   <children>
      <MFXScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
         <content>
            <FlowPane fx:id="ides" alignment="CENTER" columnHalignment="CENTER" hgap="10.0" prefWrapLength="1000.0" vgap="10.0" />
         </content>
      </MFXScrollPane>
      <HBox alignment="CENTER" spacing="10.0" style="-fx-background-radius: 10; -fx-background-color: grey;">
         <children>
            <MFXButton fx:id="next" prefWidth="100.0" style="-fx-background-color: skyblue;" stylesheets="@../../style/common.css" text="Next">
               <graphic>
                  <MFXFontIcon description="mfx-chevron-right" />
               </graphic>
            </MFXButton>
            <MFXButton fx:id="prev" prefWidth="100.0" style="-fx-background-color: skyblue;" text="Previous">
               <graphic>
                  <MFXFontIcon description="mfx-chevron-left" />
               </graphic>
            </MFXButton>
         </children>
         <padding>
            <Insets bottom="12.0" top="12.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</VBox>
